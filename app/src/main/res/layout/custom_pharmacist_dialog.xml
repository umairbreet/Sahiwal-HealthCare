<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_3sdp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/docDialogClose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="right"
            android:background="@drawable/closebtn"
            android:clickable="true"
            android:focusable="true"
            android:soundEffectsEnabled="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

        <ImageView
            android:id="@+id/phImage"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pharmacy" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mid"
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DialogClinicTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:shadowColor="#CD191818"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:text="Title"
                android:textColor="#245B71"
                android:textSize="@dimen/_23ssp" />

            <TextView
                android:id="@+id/DialogAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:fontFamily="@font/aldrich"
                android:padding="@dimen/_5sdp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/DialogtimeImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/doctortime" />

                <TextView
                    android:id="@+id/Dialogopentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/aldrich"
                    android:text="10:00AM"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/aldrich"
                    android:text="To"
                    android:textColor="#E11212"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/DialogcloseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/aldrich"
                    android:text="10:00AM"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_below="@id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_3sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/DialogContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:soundEffectsEnabled="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/phone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>