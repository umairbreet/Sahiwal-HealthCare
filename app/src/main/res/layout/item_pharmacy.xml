<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_3sdp"
        android:focusable="true"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mrOwner"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:background="@drawable/owner"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/itemPharmacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy Name"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/aldrich"
                    android:textColor="#2E93AC"
                    android:shadowColor="#D3000000"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/itemAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="address"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/itemCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAHIWAL"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_13ssp"
                        />
                    <TextView
                        android:id="@+id/itemZipcode"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:text="57000"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/detail"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="right|bottom"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_5sdp"
            android:focusable="true"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Details"
                android:textSize="@dimen/_9ssp"
                android:textColor="#DD201F1F"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>