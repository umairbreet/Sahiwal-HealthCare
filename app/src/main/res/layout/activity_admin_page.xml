<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminPage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:backgroundTint="#49B0C1"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="#49B0C1"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_30sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Admin Panel"
            android:textSize="@dimen/_23ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/clinics"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_150sdp"
            app:cardElevation="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardMaxElevation="@dimen/_35sdp"
            android:layout_margin="@dimen/_10sdp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:soundEffectsEnabled="true"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/doctor"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_90sdp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/doctors"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/anton"
                android:text="Doctors"
                android:shadowRadius="5"
                android:shadowDy="3"
                android:shadowColor="#C3000000"
                android:textSize="@dimen/_25ssp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pharmacist"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_150sdp"
            app:cardElevation="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardMaxElevation="@dimen/_35sdp"
            android:layout_margin="@dimen/_10sdp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:soundEffectsEnabled="true"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/pharmacy"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_90sdp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/pharmacy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/anton"
                android:text="Pharmacist"
                android:shadowRadius="5"
                android:shadowDy="3"
                android:shadowColor="#C3000000"
                android:textSize="@dimen/_25ssp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>