<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PharmacistLogin">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:backgroundTint="#555A5A"
        app:cardElevation="@dimen/_30sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/audiowide"
            android:text="Login Account"
            android:textColor="@color/white"
            android:textSize="@dimen/_23ssp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_250sdp"
            app:cardElevation="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            >
            <ProgressBar
                android:id="@+id/progressBarAdminPh"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_200sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/progress_bar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_minus10sdp"
                android:layout_gravity="center_horizontal"
                >
                <EditText
                    android:id="@+id/doctorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit"
                    android:padding="@dimen/_10sdp"
                    android:hint="Enter Email"
                    android:textSize="@dimen/_13ssp"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="#020B2C"
                    android:textColorHighlight="#E908E4DD"
                    android:drawableLeft="@drawable/useredt"
                    android:drawablePadding="@dimen/_6sdp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_minus10sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp">
                <EditText
                    android:id="@+id/doctorPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit"
                    android:padding="@dimen/_10sdp"
                    android:hint="Enter Password"
                    android:textSize="@dimen/_13ssp"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="#020B2C"
                    android:textColorHighlight="#E908E4DD"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="@dimen/_6sdp"
                    />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/doctorLogin"
                android:layout_width="@dimen/_148sdp"
                android:clickable="true"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:background="@drawable/btn2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------OR----------------"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to register Pharmacy?"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/registerPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER HERE"
                android:textColor="@color/theme_color_80"
                android:fontFamily="@font/aldrich"
                android:clickable="true"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>