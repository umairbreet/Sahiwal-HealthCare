<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Signup"
    android:background="@drawable/home">



    <androidx.cardview.widget.CardView
        android:id="@+id/selectUserImage"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_100sdp"
        android:soundEffectsEnabled="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_gravity="center"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/uploadimage"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="@dimen/_140sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_380sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#525353"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edtsignupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edit"
                android:hint="Name here..."
                android:textSize="@dimen/_13ssp"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#020B2C"
                android:textColorHighlight="#E908E4DD"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="@dimen/_6sdp"/>
            <EditText
                android:id="@+id/edtsignupphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit"
                android:hint="Phone No..."
                android:textSize="@dimen/_13ssp"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#020B2C"
                android:textColorHighlight="#E908E4DD"
                android:drawableLeft="@drawable/mobile"
                android:drawablePadding="@dimen/_6sdp"/>
        <EditText
            android:id="@+id/edtsignupemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit"
            android:hint="Email here..."
            android:textSize="@dimen/_13ssp"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#020B2C"
            android:textColorHighlight="#E908E4DD"
            android:drawableLeft="@drawable/useredt"
            android:drawablePadding="@dimen/_6sdp"/>

        <EditText
            android:id="@+id/edtsignuppass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit"
            android:hint="Password..."
            android:textSize="@dimen/_13ssp"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#020B2C"
            android:textColorHighlight="#E908E4DD"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/_6sdp"/>

        <Button
            android:id="@+id/usersignup"
            android:layout_width="@dimen/_152sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn2"
            android:soundEffectsEnabled="true"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/aldrich"
            android:text="-----OR LOGIN WITH-----"
            android:textColor="#B5FFFFFF"
            android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/gmailsignup"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:backgroundTint="#FDFDFD"
                android:clickable="true"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/google"
                        android:background="@color/theme_color_80"
                        />

                    <TextView
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIGNIN WITH GOOGLE"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#E1393535"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_325sdp"
            android:layout_gravity="right"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlREADY HAVE AN\nACCOUNT?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/useralready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="LOGIN"
            android:textColor="#0AB3DD"
            android:textSize="@dimen/_16ssp"
            android:clickable="true"
            android:focusable="true"
            android:soundEffectsEnabled="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/singupprogressbar"
            android:layout_width="@dimen/_67sdp"
            android:layout_height="@dimen/_67sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_308sdp"
            android:background="@drawable/adminloginprogressbar"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>